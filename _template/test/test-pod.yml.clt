apiVersion: v1
kind: Pod
metadata:
  labels:
    app: <%= @ app-name %>-pod
  name: <%= @ app-name %>-pod
spec:
  containers:
  - name: <%= @ app-name %>
    image: localhost/<%= @ app-name %>:latest
    ports:
    - containerPort: 8080
      hostPort: 8080
      protocol: TCP
    - containerPort: 4005
      hostPort: 4005
      protocol: TCP
    - containerPort: 9101
      hostPort: 9101
      protocol: TCP
    volumeMounts:
    - mountPath: /etc/<%= @ app-name %>/config.ini
      name: <%= @ app-name %>-config
    resources: {}
    securityContext:
      allowPrivilegeEscalation: false
      capabilities: {}
      privileged: false
      readOnlyRootFilesystem: false
      seLinuxOptions: {}
  volumes:
  - name: <%= @ app-name %>-config
    hostPath:
      path: /home/runner/work/<%= @ app-name %>/<%= @ app-name %>/test/config.ini
      type: File
status: {}
